<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/css/container-checker.css" />
</head>

<body>
    <div class="dashboard-container">
        <%- include('partials/sidebar') %>
        <main class="main-content">
            <%- include('partials/header') %>
            <div class="content-wrapper">
                <div class="page-content">
                    <div class="content-header">
                        <h2>Container checker</h2>
                        <p>Check the container number if it's correct .</p>
                    </div>
                    <div class="content-placeholder container-checker">
                        <div class="form-group">
                            <label class="form-label" for="container-id">Container ID</label>
                            <input
                              type="text"
                              id="container-id"
                              class="form-input"
                              placeholder="Enter container ID (e.g., CONT-1234)"
                            />
                        </div>
                        <button id="verify-button" class="btn btn-primary">
                            Verify Container
                        </button>
                    </div>
                </div>
                <div id="container-result" style="display: none"></div>
            </div>  
        </main>
    </div>

    <%- include('partials/footer') %>
    <script src="/js/container-checker.js"></script>
</body>

</html>