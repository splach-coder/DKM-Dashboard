<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/css/container-checker.css" />
</head>

<body>
    <div class="dashboard-container">
        <%- include('partials/sidebar') %>
        <main class="main-content">
            <%- include('partials/header') %>
            <div class="content-wrapper">
                <div class="page-content">
                    <div class="content-header">
                        <h2>Container checker</h2>
                        <p>Check if a container number is valid.</p>
                    </div>
                    <div class="content-placeholder container-checker">
                        <div class="form-group">
                            <label class="form-label" for="container-id">Container ID</label>
                            <input
                              type="text"
                              id="container-id"
                              class="form-input"
                              placeholder="Enter container ID (e.g., ABCD1234567)"
                              maxlength="11"
                              pattern="[A-Z]{4}\d{7}"
                            />
                            <small class="form-hint">Format: 4 letters followed by 7 numbers</small>
                        </div>
                        <button id="verify-button" class="btn btn-primary">
                            <i data-feather="check-circle"></i>
                            Verify Container
                        </button>
                    </div>
                    <div id="container-result" class="result-container"></div>
                </div>
            </div>  
        </main>
    </div>

    <%- include('partials/footer') %>
    <script src="/js/container-checker.js"></script>
</body>

</html>